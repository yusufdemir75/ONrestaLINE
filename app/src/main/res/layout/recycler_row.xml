<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Recyclerrow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="401dp"
        android:layout_height="218dp"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:background="@drawable/arkaplanahsap"

        android:elevation="30dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="397dp"
            android:layout_height="match_parent"
            android:background="@drawable/mavibutton1">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="750px"
                android:layout_height="150dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/mavibutton"
                android:elevation="30dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintBottom_toTopOf="@+id/textView10"
                app:layout_constraintEnd_toStartOf="@+id/fiyattext"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="298dp"
                    android:layout_height="match_parent"
                    android:layout_gravity=""
                    android:layout_weight="1" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/fiyattext"
                android:layout_width="53dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:layout_marginStart="4dp"
                android:layout_marginTop="68dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:gravity="center|right"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/fiyattext2"
                app:layout_constraintStart_toEndOf="@+id/cardView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fiyattext2"
                android:layout_width="53dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:layout_marginStart="1dp"
                android:layout_marginTop="68dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TL"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fiyattext"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="397dp"
                android:layout_height="52dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/bungee_inline"
                android:gravity="center"
                android:text="Yemek AdÄ±"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>